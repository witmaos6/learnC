//입력: 테스트케이스 개수, 데이터 수, 찾고 싶은 데이터 위치
//출력: 찾고 싶은 데이터가 몇번째로 출력되는지 
#include <iostream>
#include <queue>
using namespace std;

class PrintQ {
private:
	int M = 0;
	priority_queue<int>pq;
	queue<pair<int, int>>q;
public:
	void document();
	int loc();
};

void PrintQ::document() {
	int N;
	cin >> N >> M;
	int importance;
	for (int i = 0; i < N; i++) {
		cin >> importance;
		q.push({ i,importance });
		pq.push(importance);
	}	
}

int PrintQ::loc() {
	int fir, sec;
	int count = 0;
	while (!q.empty()) {
		fir = q.front().first;
		sec = q.front().second;
		q.pop();
		if (pq.top() == sec) {
			pq.pop();
			++count;
			if (fir == M) break;
		}
		else {
			q.push({ fir,sec });
		}
	}
	return count;
}

int main(void) {
	ios_base::sync_with_stdio(false);
	cin.tie(NULL); cout.tie(NULL);
	int T;
	cin >> T;	
	PrintQ Prq;

	for (int i = 0; i < T; i++) {
		Prq.document();
		cout << Prq.loc() << "\n";
	}
	return 0;
}
